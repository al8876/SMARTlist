<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <title>compleet.io</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- compleet Style Sheet CSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  </head>

  <body>

    <!-- Nav bar -->
    <nav class="navbar navbar-inverse bg-#62D2FA" style="background-color: #62D2FA;">
        <a class="navbar-brand" style="color: white; margin: 0 auto; font-size: 2em;">compleet.ai</a>
    </nav>

    <!-- ADD ITEM -->
      <form class="form-horizontal" action="/" method="POST"  role="form">
    <div class="container new-list">
        <div class="form-group" >
          <textarea class="form-control" rows="5" id="comment" placeholder="What do you want to do?" name="input_list_item"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block" style='margin-top: -25px;'>ADD ITEM</button>
    </div>
      </form>


    <!--CATEGORIES -->

    <!-- WATCH CATEGORY -->
    <div class="container category">
        <button id="toWatch" type="button" class="btn btn-primary btn-lg btn-block" data-toggle="collapse" data-target="#watchList">TO WATCH</button>
          <section id='watchList' class='collapse'>
            <button type="button" class="btn btn-secondary btn-lg btn-block listItem" data-toggle="modal" data-target="#watchModal">
                <label class="check">
                    <input type="checkbox" >
                    <span class="checkmark"></span>
                  </label>


            </button>
          </section>
    </div>

    <!-- READ CATEGORY -->
    <div class="container category">
        <button id="toRead" type="button" class="btn btn-primary btn-lg btn-block" data-toggle="collapse" data-target="#readList">TO READ</button>
          <section id='readList' class='collapse'>
            <button type="button" class="btn btn-secondary btn-lg btn-block listItem" data-toggle="modal" data-target="#readModal">
                <label class="check">
                    <input type="checkbox" >
                    <span class="checkmark"></span>
                  </label>
                  Outliers
            </button>
          </section>
    </div>

    <!-- EAT CATEGORY -->
    <div class="container category">
        <button id="toEat" type="button" class="btn btn-primary btn-lg btn-block" data-toggle="collapse" data-target="#eatList">TO EAT</button>
          <section id='eatList' class='collapse'>
            <button type="button" class="btn btn-secondary btn-lg btn-block listItem" data-toggle="modal" data-target="#eatModal">
                <label class="check">
                    <input type="checkbox" >
                    <span class="checkmark"></span>
                  </label>
                  Cactus Club
            </button>
          </section>
    </div>

    <!-- BUY CATEGORY -->
    <div class="container category">
        <button id="toBuy" type="button" class="btn btn-primary btn-lg btn-block" data-toggle="collapse" data-target="#buyList">TO BUY</button>
          <section id='buyList' class='collapse'>
            <button type="button" class="btn btn-secondary btn-lg btn-block listItem" data-toggle="modal" data-target="#buyModal">
                <label class="check">
                    <input type="checkbox" >
                    <span class="checkmark"></span>
                  </label>
                  groceries
            </button>
          </section>
    </div>

    <!-- OTHER CATEGORY -->
    <div class="container category">
        <button id="toOther" type="button" class="btn btn-primary btn-lg btn-block" data-toggle="collapse" data-target="#otherList">TO OTHER</button>
          <section id='otherList' class='collapse'>
            <button type="button" class="btn btn-secondary btn-lg btn-block listItem" data-toggle="modal" data-target="#otherModal">
                <label class="check">
                    <input type="checkbox" >
                    <span class="checkmark"></span>
                  </label>
                  go skydiving
            </button>
          </section>
    </div>




    <!-- MODALS -->

    <!-- Modal WATCH -->
    <div class="modal fade" id="watchModal" tabindex="-1" role="dialog" aria-labelledby="watchModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="watchModalTitle">Shrek</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <!-- Category Selector -->
            <div class="form-group">
                <label for="selWatchCategory">Category:</label>
                <select class="form-control" id="selWatchCategory">
                  <option>Watch</option>
                  <option>Read</option>
                  <option>Eat</option>
                  <option>Buy</option>
                  <option>Other</option>
                </select>
              </div>

              <!-- Completion Selector -->
              <div class="form-group">
                <label for="selWatchDone">Done:</label>
                <select class="form-control" id="selWatchDone">
                  <option>Yes</option>
                  <option>No</option>
                </select>
              </div>

              <!-- API DATA Selector -->
              <div class="container">
                <div class="container">Release Year:</div>
                <div class="container">Rating:</div>
                <div class="container">Stars:</div>
                <div class="container">Director:</div>
                <div class="container">Genre:</div>
              </div>


          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>





