                </select>
              </div>

              <!-- API DATA Selector -->
              <div class="container">
                <div class="container">Release Year:</div>
                <div class="container">Rating:</div>
                <div class="container">Author:</div>
                <div class="container">Genre:</div>
                <div class="container">Description::</div>
                <div class="container">Book Cover:</div>
              </div>


          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>




    <!-- Modal EAT -->
    <div class="modal fade" id="eatModal" tabindex="-1" role="dialog" aria-labelledby="eatModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="eatModalTitle">Cactus Club</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
